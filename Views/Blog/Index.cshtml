@model IEnumerable<asp_blog_app.Models.BlogPost>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Blog</h1>
        <a href="/Blog/Create" class="btn btn-success">Cr√©er un nouvel article</a>
    </div>

    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-truncate">@post.Title</h5>
                        <p class="card-text text-muted small">
                            Par <strong>@post.Author</strong> le @post.CreatedAt.ToString("dd MMM yyyy")
                        </p>
                        <p class="card-text">
                            @post.Content.Substring(0, Math.Min(post.Content.Length, 100))...
                        </p>
                        <a href="/Blog/Details/@post.Id" class="btn btn-primary">Lire plus</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>